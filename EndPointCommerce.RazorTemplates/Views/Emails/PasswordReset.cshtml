@using EndPointCommerce.RazorTemplates.ViewModels

@model IdentityEmailViewModel

<section class="py-1">
    <div class="container px-4 px-lg-5 my-5">
        <p>
            Hello @Model.User.Greeting,
        </p>
        <p>
            Thank you for signing up with EndPointCommerce.com.
        </p>
        <p>
            Please click the following button to reset your password:
        </p>
        <p>
            <a href="@Model.Link" target="_blank">
                Set a New Password
            </a>
        </p>
        <p>
            If you did not request a password reset, please ignore this email.
        </p>
    </div>
</section>
